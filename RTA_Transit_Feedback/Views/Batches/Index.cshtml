@model IEnumerable<RTA_Transit_Feedback.Batch>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrackingNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href='@String.Format("https://tools.usps.com/go/TrackConfirmAction?tLabels={0}", @Html.DisplayFor(modelItem => item.TrackingNo))'target="_blank">@Html.DisplayFor(modelItem => item.TrackingNo)</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BatchID }) |
            @Html.ActionLink("Details", "Details", new { id = item.BatchID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BatchID })
            @Html.ActionLink("PrintBatch", "PrintBatch", new { id = item.BatchID })
        </td>
    </tr>
}

</table>
